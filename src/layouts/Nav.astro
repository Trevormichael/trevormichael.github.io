---
const pathname = new URL(Astro.request.url).pathname;
const current = pathname.slice(1); // remove the first "/"
---

<div class="nav-container">
    <h1><a href="/">Trevor Michael C.</a></h1>
    <p>Developer, Designer</p>
    <ul role="list">
        <li><a class={current == "about" ? "active" : ""} href="/about">ABOUT</a></li>
        <li><a class={current == "skills" ? "active" : ""} href="/skills">SKILLS</a></li>
        <li><a class={current == "projects" ? "active" : ""} href="/projects">PROJECTS</a></li>
        <li><a class={current == "contact" ? "active" : ""} href="/contact">CONTACT</a></li>
    </ul>
</div>

<style>
    .nav-container {
        padding-right: 15vw;
    }
	h1 {
		font-size: 1.4rem;
		font-weight: 800;
		line-height: 1;
		margin-bottom: 0;
        text-shadow: 0px 0px 20px rgba(255, 255, 255, 0.1);
	}
	p {
		margin-top: 8px;
        font-weight: 200;
	}
	ul {
		padding: 0px 10px;
		margin: 0;
		margin-top: 2em;
        border-left: 1px solid rgba(255 255 255 / 30%);
	}
	li {
		list-style-type: none;
		padding: 6px 0px;
        font-weight: 200;
	}
	a {
        color: white;
        text-decoration: none;
        padding: 0px 0px;
        display: block;
        text-align: left;
        transition: transform 200ms, font-weight 200ms;
	}
    li > a:hover {
        font-weight: 400;
        transform: translateX(4px);
    }
    a.active {
        font-weight: 600;
    }
</style>